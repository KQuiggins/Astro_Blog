---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";

const allPosts = await getCollection("posts");
console.log(allPosts);

---

<Layout title="A Coder's Life">
  <main class="px-24 max-sm:px-5 max-w-7xl mx-auto w-full">
    <h1 class="text-6xl font-bold mb-5">A Coder's Life Blog</h1>
    <p>Exploring the Syntax of Success: One Developer's Chronicle Through Code and Innovation</p>
    {
        allPosts.map((post) => (
           <h2>{post.data.title}</h2>
        ))
    }
  </main>
</Layout>